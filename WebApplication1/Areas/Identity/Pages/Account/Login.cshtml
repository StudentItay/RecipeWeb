    body {
        background-image: url('/images/background/BackGroundBtn.jpg');
        background-size: cover;
        background-position: center;
    }

    h1{
        font-family: "Amatic SC", sans-serif;
        font-weight: 900;
        font-style: normal;
        color: #ffce67;
        font-size: 3em
    }

    ul,li {
        font-family: "Amatic SC", sans-serif;
        background: rgba(0,0,,0.7); /* רקע חצי שקוף */
        background-size: 15px;
